= form_for post, html: { class: 'form-horizontal', multipart: true }  do |f|
  - if post.errors.any?
    #error_explanation
      %ul
        - post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = file_field_tag "images[]", type: :file, multiple: true
  .field
    = f.label :permalink
    = f.text_field :permalink
  .actions
    = f.submit

