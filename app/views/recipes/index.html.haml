.card-wrapper
  .cards.primary-cards
    .logo-wrapper
      %center
        = image_tag "sheba-yemeni-food-logo.png"
        %div
          .g-ytsubscribe{"data-channel" => "shebayemenifood", "data-count" => "default", "data-layout" => "full"}
    = render "recipe", recipe: recipes.first

  .cards.small-cards
    - recipes.each_with_index do |recipe, index|
      - if index == 5 || index == 8
        .card
          = render "ads/display"
      = render recipe

%center.breathe
  = will_paginate recipes

